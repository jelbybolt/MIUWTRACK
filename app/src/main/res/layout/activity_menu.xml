<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/fgmenu"
        android:scaleType="centerCrop"
        android:contentDescription="Fondo de pantalla" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifBottomLeft"
        android:layout_width="101dp"
        android:layout_height="78dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="60dp"
        android:contentDescription="GIF inferior izquierdo"
        android:scaleType="fitCenter"
        android:src="@drawable/rabbit" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifBottomRight"
        android:layout_width="94dp"
        android:layout_height="81dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:contentDescription="GIF inferior derecho"
        android:scaleType="fitCenter"
        android:src="@drawable/ardi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="120dp"
        android:paddingRight="20dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="359dp"
            android:layout_gravity="center_horizontal"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:paddingBottom="5dp">

            <ImageButton
                android:id="@+id/btnAgenda"
                android:layout_width="140dp"
                android:layout_height="166dp"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="Abrir Agenda"
                android:scaleType="centerCrop"
                android:src="@mipmap/agem" />

            <ImageButton
                android:id="@+id/btnRegistro"
                android:layout_width="131dp"
                android:layout_height="167dp"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="Abrir Registro"
                android:scaleType="centerCrop"
                android:src="@mipmap/regis" />

            <ImageButton
                android:id="@+id/btnConsulta"
                android:layout_width="137dp"
                android:layout_height="175dp"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="Realizar Consulta"
                android:scaleType="centerCrop"
                android:src="@mipmap/cons" />

            <ImageButton
                android:id="@+id/btnHistorial"
                android:layout_width="138dp"
                android:layout_height="172dp"
                android:layout_margin="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="Ver Historial"
                android:scaleType="centerCrop"
                android:src="@mipmap/histo" />

        </GridLayout>

        <ImageButton
            android:id="@+id/btnVeterinarios"
            android:layout_width="135dp"
            android:layout_height="189dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="Ver Veterinarios"
            android:scaleType="centerCrop"
            android:src="@mipmap/vet" />
    </LinearLayout>
</FrameLayout>