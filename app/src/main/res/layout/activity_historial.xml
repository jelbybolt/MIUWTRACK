<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HistorialActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/fondhismen"
        android:contentDescription="Background image" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:padding="16dp"
            android:text=""
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginTop="16dp" />


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifTopRight"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="268dp"
            android:contentDescription="GIF superior derecha"
            android:scaleType="fitCenter"
            android:src="@drawable/pal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPacientes"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/headerTextView"
            app:layout_constraintBottom_toTopOf="@id/gifBottomLeft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifBottomLeft"
            android:layout_width="68dp"
            android:layout_height="52dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="GIF inferior izquierdo"
            android:scaleType="fitCenter"
            android:src="@drawable/pug2"
            app:layout_constraintBottom_toTopOf="@id/btnVolver"
            app:layout_constraintStart_toStartOf="parent" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifBottomRight"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="GIF inferior derecho"
            android:scaleType="fitCenter"
            android:src="@drawable/ardi"
            app:layout_constraintBottom_toTopOf="@id/btnVolver"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp" />

        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="151dp"
            android:layout_height="51dp"
            android:layout_marginBottom="64dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back button"
            android:scaleType="fitCenter"
            android:src="@mipmap/btnnvolver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>